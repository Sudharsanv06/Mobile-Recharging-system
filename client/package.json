{
  "name": "my-react-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "vitest --config vitest.config.js --run",
    "test:watch": "vitest --config vitest.config.js",
    "test:e2e": "playwright test",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.10.1",
    "jspdf": "^3.0.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.6.3",
    "socket.io-client": "^4.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@eslint/plugin-kit": "^0.3.5",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^15.0.0",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.4",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "js-yaml": "^4.1.1",
    "jsdom": "^22.1.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.13"
  },
  "vitest": {
    "globals": true,
    "environment": "jsdom",
    "setupFiles": [
      "src/setupTests.js"
    ],
    "include": [
      "src/**/*.test.{js,jsx}",
      "src/**/__tests__/**/*.test.{js,jsx}",
      "src/**/__tests__/**/*.{test,spec}.{js,jsx}"
    ],
    "exclude": [
      "e2e/**"
    ]
  }
}
